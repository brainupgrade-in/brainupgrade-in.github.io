    <!-- Newsletter Subscription JavaScript -->
    <script>

        // Track footer link clicks
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.footer-premium a').forEach(link => {
                link.addEventListener('click', function() {
                    const linkText = this.textContent.trim();
                    const linkHref = this.href;

                    gtag('event', 'click', {
                        'event_category': 'footer_navigation',
                        'event_label': linkText,
                        'link_url': linkHref
                    });
                });
            });

            // Track social media clicks
            document.querySelectorAll('[title*="YouTube"], [title*="LinkedIn"], [title*="WhatsApp"]').forEach(social => {
                social.addEventListener('click', function() {
                    const platform = this.title.toLowerCase().includes('youtube') ? 'youtube' :
                                   this.title.toLowerCase().includes('linkedin') ? 'linkedin' : 'whatsapp';

                    gtag('event', 'social_click', {
                        'event_category': 'social_engagement',
                        'event_label': platform,
                        'source': 'footer'
                    });
                });
            });

            console.log('‚úÖ Enhanced footer with analytics tracking loaded successfully');
        });
    </script>
</footer>